<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do</title>
</head>

<body>
    <div class="container">
        <h2>Add a task</h2>
        <form action="/addTask" method='POST'>
            <input type="text" placeholder="Task" name='taskToDo'>
            <input type="submit">
        </form>
        <ul class="tasks">
            <h2>Tasks to do:</h2>
            <% for(let i=0;i < info.length; i++) {%>

                <li class="task">
                    <span>
                        <%= info[i].taskToDo %>
                    </span>
                    <button class='delete'>Delete</button>
                    <button class='complete'>Completed</button>

                </li>
                <% } %>
        </ul>

        <ul class="completed">
            <h2>Completed tasks:</h2>
            <% for(let i=0;i < completed.length; i++) {%>

                <li class="task">
                    <span>
                        <%= completed[i].completedTask %>
                    </span>
                    <button class='removeCompleted'>Delete</button>
                </li>
                <% } %>
        </ul>


    </div>
    <script src="js/main.js"></script>
</body>

</html>